<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulario -->
    <record id="view_pi_categoria_form" model="ir.ui.view">
        <field name="name">pi.categoria.form</field>
        <field name="model">pi.categoria</field>
        <field name="arch" type="xml">
            <form string="Categoría">
                <sheet>
                    <field name="imagen" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="nombre" placeholder="Nombre de la categoría..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <field name="descripcion" placeholder="Descripción de la categoría..."/>
                    </group>
                    
                    <notebook>
                        <page string="Productos" name="productos">
                            <button name="action_listar_productos" 
                                    string="Ver Todos los Productos" 
                                    type="object" 
                                    class="btn-primary"/>
                            <field name="productos_ids">
                                <list>
                                    <field name="nombre_producto"/>
                                    <field name="precio"/>
                                    <field name="estado_venta"/>
                                    <field name="propietario_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de Lista -->
    <record id="view_pi_categoria_list" model="ir.ui.view">
        <field name="name">pi.categoria.list</field>
        <field name="model">pi.categoria</field>
        <field name="arch" type="xml">
            <list string="Categorías">
                <field name="imagen" widget="image" options="{'size': [50, 50]}"/>
                <field name="nombre"/>
                <field name="descripcion"/>
            </list>
        </field>
    </record>

    <!-- Vista de Búsqueda -->
    <record id="view_pi_categoria_search" model="ir.ui.view">
        <field name="name">pi.categoria.search</field>
        <field name="model">pi.categoria</field>
        <field name="arch" type="xml">
            <search string="Buscar Categorías">
                <!-- Campos de búsqueda -->
                <field name="nombre"/>
                <field name="descripcion"/>
                
                <!-- Filtros adicionales -->
                <filter string="Con Productos" name="con_productos" domain="[('productos_ids', '!=', False)]"/>
                <filter string="Sin Productos" name="sin_productos" domain="[('productos_ids', '=', False)]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Nombre" name="group_nombre" context="{'group_by': 'nombre'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista Graph -->
    <record id="view_pi_categoria_graph" model="ir.ui.view">
        <field name="name">pi.categoria.graph</field>
        <field name="model">pi.categoria</field>
        <field name="arch" type="xml">
            <graph string="Análisis de Categorías" type="pie">
                <field name="nombre" type="row"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Acción de Ventana -->
    <record id="action_pi_categoria" model="ir.actions.act_window">
        <field name="name">Categorías</field>
        <field name="res_model">pi.categoria</field>
        <field name="view_mode">list,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva categoría
            </p>
            <p>
                Las categorías te ayudan a organizar los productos en el marketplace.
            </p>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_pi_categoria"
              name="Categorías"
              action="action_pi_categoria"
              sequence="30"/>
</odoo>
