<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_pi_reporte_tree" model="ir.ui.view">
        <field name="name">pi.reporte.tree</field>
        <field name="model">pi.reporte</field>
        <field name="arch" type="xml">
            <tree decoration-success="estado=='resuelto'" 
                  decoration-danger="estado=='rechazado'"
                  decoration-warning="estado=='en_revision'">
                <field name="display_name" widget="badge"/>
                <field name="estado" widget="badge" decoration-bf="estado=='pendiente'"/>
                <field name="tipo_reporte"/>
                <field name="referencia"/>
                <field name="fecha"/>
                <field name="fecha_resolucion" string="Resuelto"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_pi_reporte_form" model="ir.ui.view">
        <field name="name">pi.reporte.form</field>
        <field name="model">pi.reporte</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_marcar_en_revision" 
                            string="üîç En Revisi√≥n" 
                            type="object" 
                            class="oe_highlight"
                            attrs="{'invisible': [('estado', '!=', 'pendiente')]}"/>
                    <button name="action_resolver_reporte" 
                            string="‚úÖ Resolver" 
                            type="object" 
                            class="oe_highlight"
                            attrs="{'invisible': [('estado', 'not in', ['pendiente', 'en_revision'])]}"/>
                    <button name="action_rechazar_reporte" 
                            string="‚ùå Rechazar" 
                            type="object"
                            attrs="{'invisible': [('estado', '!=', 'pendiente')]}"/>
                    <field name="estado" widget="statusbar" statusbar_visible="pendiente,en_revision,resuelto,rechazado"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="fecha"/>
                            <field name="tipo_reporte"/>
                            <field name="referencia"/>
                            <field name="reportado_por_id" readonly="1"/>
                            <field name="nombre_reportado_por"/>
                        </group>
                        <group>
                            <field name="fecha_resolucion"/>
                            <field name="accion_tomada"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Motivo">
                            <field name="motivo" readonly="1"/>
                        </page>
                        <page string="Resoluci√≥n" attrs="{'invisible': [('estado', 'in', ['pendiente', 'en_revision'])]}">
                            <field name="notas_resolucion" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pi_reporte" model="ir.actions.act_window">
        <field name="name">Reportes</field>
        <field name="res_model">pi.reporte</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_estado_pendiente': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¬°No hay reportes pendientes!
            </p>
            <p>
                Los reportes aparecer√°n aqu√≠ autom√°ticamente cuando los usuarios reporten 
                productos, usuarios o comentarios.
            </p>
        </field>
    </record>

    <!-- Menu (solo para empleados PI) -->
    <menuitem id="menu_pi_reportes_root"
              name="Reportes"
              parent="pi_c2c.menu_pi_c2c_root"
              action="action_pi_reporte"
              groups="pi_c2c.group_pi_employee"/>
</odoo>
