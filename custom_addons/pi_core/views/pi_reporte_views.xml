<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_pi_reporte_list" model="ir.ui.view">
        <field name="name">pi.reporte.list</field>
        <field name="model">pi.reporte</field>
        <field name="arch" type="xml">
            <list decoration-success="estado=='resuelto'" 
                  decoration-warning="estado=='en_revision'"
                  decoration-danger="estado=='rechazado'">
                <field name="display_name" width="150"/>
                <field name="estado" widget="badge" 
                       decoration-bf="estado=='pendiente'"
                       width="100"/>
                <field name="tipo_reporte" width="120"/>
                <field name="referencia" width="200"/>
                <field name="fecha" width="120"/>
                <field name="fecha_resolucion" string="Resuelto" width="140"/>
            </list>
        </field>
    </record>

    <record id="view_pi_reporte_form" model="ir.ui.view">
        <field name="name">pi.reporte.form</field>
        <field name="model">pi.reporte</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_marcar_en_revision" 
                            string="ðŸ” En RevisiÃ³n" 
                            type="object" 
                            class="oe_highlight btn-primary"
                            attrs="{'invisible': [('estado', '!=', 'pendiente')]}"/>
                    <button name="action_resolver_reporte" 
                            string="âœ… Resolver" 
                            type="object" 
                            class="oe_highlight btn-success"
                            attrs="{'invisible': [('estado', 'not in', ['pendiente', 'en_revision'])]}"/>
                    <button name="action_rechazar_reporte" 
                            string="âŒ Rechazar" 
                            type="object" 
                            class="btn-danger"
                            attrs="{'invisible': [('estado', '!=', 'pendiente')]}"/>
                    <field name="estado" widget="statusbar" 
                           statusbar_visible="pendiente,en_revision,resuelto,rechazado"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="display_name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="fecha"/>
                            <field name="tipo_reporte" readonly="1"/>
                            <field name="referencia" readonly="1"/>
                            <field name="reportado_por_id" options="{'no_create': True}"/>
                            <field name="nombre_reportado_por"/>
                        </group>
                        <group>
                            <field name="fecha_resolucion"/>
                            <field name="accion_tomada"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="ðŸ“ Motivo">
                            <field name="motivo" nolabel="1" readonly="1"/>
                        </page>
                        <page string="ðŸ“‹ ResoluciÃ³n" 
                              attrs="{'invisible': [('estado', 'in', ['pendiente', 'en_revision'])]}">
                            <field name="notas_resolucion" nolabel="1" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_pi_reporte" model="ir.actions.act_window">
        <field name="name">Reportes</field>
        <field name="res_model">pi.reporte</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_pendientes': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">ðŸŽ‰ Â¡No hay reportes pendientes!</p>
            <p>Los reportes aparecerÃ¡n aquÃ­ cuando los usuarios reporten contenido.</p>
        </field>
    </record>

    <menuitem id="menu_pi_reportes_root"
              name="ðŸ“‹ Reportes"
              action="action_pi_reporte"
              parent="base.menu_administration"
              sequence="10"/>
</odoo>
