<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulario -->
    <record id="view_pi_producto_form" model="ir.ui.view">
        <field name="name">pi.producto.form</field>
        <field name="model">pi.producto</field>
        <field name="arch" type="xml">
            <form string="Producto">
                <header>
                    <button name="action_marcar_vendido" 
                            string="Marcar como Vendido" 
                            type="object" 
                            class="oe_highlight"
                            invisible="estado_venta != 'disponible'"/>
                    
                    <button name="action_marcar_disponible" 
                            string="Marcar como Disponible" 
                            type="object" 
                            class="oe_highlight"
                            invisible="estado_venta != 'vendido'"/>
                    
                    <button name="action_iniciar_chat" 
                            string="Contactar Vendedor" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-comments"/>
                    
                    <field name="estado_venta" widget="statusbar" 
                           statusbar_visible="disponible,vendido"/>
                </header>
                
                <sheet>
                    <field name="imagen_principal" widget="image" class="oe_avatar"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="nombre_producto" placeholder="Nombre del producto..."/>
                        </h1>
                        <h2>
                            <field name="precio" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                            <field name="company_currency_id" invisible="1"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group string="Información Básica">
                            <field name="id_producto" readonly="1"/>
                            <field name="categoria_id" options="{'no_create': True}"/>
                            <field name="propietario_id" options="{'no_create': True}"/>
                            <field name="estado"/>
                            <field name="antiguedad_producto"/>
                        </group>
                        <group string="Detalles de Publicación">
                            <field name="ubicacion"/>
                            <field name="fecha_publicacion" readonly="1"/>
                            <field name="etiquetas_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    
                    <group string="Descripción">
                        <field name="descripcion" nolabel="1" placeholder="Describe tu producto en detalle..."/>
                    </group>
                    
                    <notebook>
                        <page string="Imágenes" name="imagenes">
                            <field name="imagenes_ids" mode="kanban">
                                <kanban>
                                    <field name="nombre"/>
                                    <field name="imagen"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="kanban_image('pi.producto.imagen', 'imagen', record.id.raw_value)" alt="Imagen"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <strong><field name="nombre"/></strong>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                            <group>
                                <field name="total_imagenes" readonly="1"/>
                            </group>
                        </page>
                        
                        <page string="Comentarios" name="comentarios">
                            <button name="action_agregar_comentario" 
                                    string="Agregar Comentario" 
                                    type="object" 
                                    class="btn-primary"/>
                            <field name="comentarios_ids">
                                <list>
                                    <field name="usuario_id"/>
                                    <field name="texto"/>
                                    <field name="fecha"/>
                                    <field name="activo"/>
                                </list>
                            </field>
                            <group>
                                <field name="total_comentarios" readonly="1"/>
                            </group>
                        </page>
                        
                        <page string="Reportes" name="reportes">
                            <button name="action_reportar_producto" 
                                    string="Reportar Producto" 
                                    type="object" 
                                    class="btn-danger"/>
                            <field name="reportes_ids">
                                <list>
                                    <field name="reportado_por_id"/>
                                    <field name="motivo"/>
                                    <field name="fecha"/>
                                    <field name="estado"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Información Adicional" name="info_adicional">
                            <group>
                                <field name="create_uid" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="write_uid" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de Lista -->
    <record id="view_pi_producto_list" model="ir.ui.view">
        <field name="name">pi.producto.list</field>
        <field name="model">pi.producto</field>
        <field name="arch" type="xml">
            <list string="Productos" 
                  decoration-success="estado_venta == 'disponible'" 
                  decoration-muted="estado_venta == 'vendido'">
                <field name="imagen_principal" widget="image" options="{'size': [50, 50]}"/>
                <field name="id_producto"/>
                <field name="nombre_producto"/>
                <field name="categoria_id"/>
                <field name="propietario_id"/>
                <field name="precio" widget="monetary" sum="Total"/>
                <field name="company_currency_id" invisible="1"/>
                <field name="estado"/>
                <field name="estado_venta" widget="badge" 
                       decoration-success="estado_venta == 'disponible'"
                       decoration-muted="estado_venta == 'vendido'"/>
                <field name="ubicacion"/>
                <field name="fecha_publicacion"/>
                <field name="total_comentarios"/>
                <field name="total_imagenes"/>
            </list>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_pi_producto_kanban" model="ir.ui.view">
        <field name="name">pi.producto.kanban</field>
        <field name="model">pi.producto</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="nombre_producto"/>
                <field name="precio"/>
                <field name="imagen_principal"/>
                <field name="estado_venta"/>
                <field name="propietario_id"/>
                <field name="ubicacion"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('pi.producto', 'imagen_principal', record.id.raw_value)" 
                                     alt="Producto" 
                                     style="max-height: 150px;"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="nombre_producto"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="ubicacion"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="propietario_id"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="precio" widget="monetary"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="estado_venta" widget="badge"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista de Búsqueda -->
    <record id="view_pi_producto_search" model="ir.ui.view">
        <field name="name">pi.producto.search</field>
        <field name="model">pi.producto</field>
        <field name="arch" type="xml">
            <search string="Buscar Productos">
                <field name="id_producto"/>
                <field name="nombre_producto"/>
                <field name="propietario_id"/>
                <field name="categoria_id"/>
                <field name="etiquetas_ids"/>
                <field name="ubicacion"/>
                
                <filter string="Disponibles" name="disponibles" domain="[('estado_venta', '=', 'disponible')]"/>
                <filter string="Vendidos" name="vendidos" domain="[('estado_venta', '=', 'vendido')]"/>
                
                <separator/>
                <filter string="Nuevos" name="nuevos" domain="[('estado', '=', 'nuevo')]"/>
                <filter string="Segunda Mano" name="segunda_mano" domain="[('estado', '=', 'segunda_mano')]"/>
                
                <separator/>
                <filter string="Mis Productos" name="mis_productos" 
                        domain="[('propietario_id.user_id', '=', uid)]"/>
                
                <separator/>
                <filter string="Última Semana" name="ultima_semana" 
                        domain="[('fecha_publicacion', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="Último Mes" name="ultimo_mes" 
                        domain="[('fecha_publicacion', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado de Venta" name="group_estado_venta" context="{'group_by': 'estado_venta'}"/>
                    <filter string="Categoría" name="group_categoria" context="{'group_by': 'categoria_id'}"/>
                    <filter string="Propietario" name="group_propietario" context="{'group_by': 'propietario_id'}"/>
                    <filter string="Estado" name="group_estado" context="{'group_by': 'estado'}"/>
                    <filter string="Ubicación" name="group_ubicacion" context="{'group_by': 'ubicacion'}"/>
                    <filter string="Fecha Publicación" name="group_fecha" context="{'group_by': 'fecha_publicacion'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista Graph -->
    <record id="view_pi_producto_graph" model="ir.ui.view">
        <field name="name">pi.producto.graph</field>
        <field name="model">pi.producto</field>
        <field name="arch" type="xml">
            <graph string="Análisis de Productos" type="bar">
                <field name="categoria_id" type="row"/>
                <field name="precio" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Acción de Ventana -->
    <record id="action_pi_producto" model="ir.actions.act_window">
        <field name="name">Productos</field>
        <field name="res_model">pi.producto</field>
        <field name="view_mode">kanban,list,form,graph</field>
        <field name="search_view_id" ref="view_pi_producto_search"/>
        <field name="context">{'search_default_disponibles': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo producto
            </p>
            <p>
                Publica productos para vender en el marketplace. Añade imágenes, descripción, 
                precio y toda la información necesaria para atraer compradores.
            </p>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_pi_producto"
              name="Productos"
              action="action_pi_producto"
              sequence="10"/>
</odoo>
