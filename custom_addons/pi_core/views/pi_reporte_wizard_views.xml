<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pi_reporte_resolver_wizard_form" model="ir.ui.view">
        <field name="name">pi.reporte.resolver.wizard.form</field>
        <field name="model">pi.reporte.resolver.wizard</field>
        <field name="arch" type="xml">
            <form string="Resolver Reporte">
                <group>
                    <field name="reporte_id" invisible="1"/>
                    <field name="accion_tomada"/>
                    <field name="notas_resolucion" placeholder="Explica qué acción tomaste y por qué..."/>
                </group>
                <footer>
                    <button name="action_confirmar_resolucion" 
                            type="object" 
                            string="Confirmar Resolución"
                            class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
