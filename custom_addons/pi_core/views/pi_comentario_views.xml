<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulario -->
    <record id="view_pi_comentario_form" model="ir.ui.view">
        <field name="name">pi.comentario.form</field>
        <field name="model">pi.comentario</field>
        <field name="arch" type="xml">
            <form string="Comentario">
                <header>
                    <button name="action_eliminar_comentario" 
                            string="Eliminar" 
                            type="object" 
                            class="btn-danger"
                            invisible="not activo"/>
                    
                    <button name="action_reportar_comentario" 
                            string="Reportar" 
                            type="object" 
                            class="btn-warning"
                            icon="fa-flag"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="nombre_usuario" readonly="1"/>
                        </h1>
                        <h3>
                            <field name="producto_id"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group>
                            <field name="usuario_id"/>
                            <field name="fecha" readonly="1"/>
                            <field name="editado" readonly="1"/>
                            <field name="fecha_edicion" readonly="1" invisible="not editado"/>
                        </group>
                        <group>
                            <field name="activo"/>
                            <field name="total_reportes" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Comentario">
                        <field name="texto" nolabel="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Reportes" name="reportes">
                            <field name="reportes_ids">
                                <list>
                                    <field name="reportado_por_id"/>
                                    <field name="motivo"/>
                                    <field name="fecha"/>
                                    <field name="estado"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de Lista -->
    <record id="view_pi_comentario_list" model="ir.ui.view">
        <field name="name">pi.comentario.list</field>
        <field name="model">pi.comentario</field>
        <field name="arch" type="xml">
            <list string="Comentarios" 
                  decoration-muted="not activo">
                <field name="nombre_usuario"/>
                <field name="producto_id"/>
                <field name="texto"/>
                <field name="fecha"/>
                <field name="editado"/>
                <field name="activo"/>
                <field name="total_reportes"/>
            </list>
        </field>
    </record>

    <!-- Vista de Búsqueda -->
    <record id="view_pi_comentario_search" model="ir.ui.view">
        <field name="name">pi.comentario.search</field>
        <field name="model">pi.comentario</field>
        <field name="arch" type="xml">
            <search string="Buscar Comentarios">
                <field name="usuario_id"/>
                <field name="producto_id"/>
                <field name="texto"/>
                
                <filter string="Activos" name="activos" domain="[('activo', '=', True)]"/>
                <filter string="Eliminados" name="eliminados" domain="[('activo', '=', False)]"/>
                <filter string="Editados" name="editados" domain="[('editado', '=', True)]"/>
                <filter string="Con Reportes" name="con_reportes" domain="[('total_reportes', '&gt;', 0)]"/>
                
                <separator/>
                <filter string="Mis Comentarios" name="mis_comentarios" 
                        domain="[('usuario_id.user_id', '=', uid)]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Usuario" name="group_usuario" context="{'group_by': 'usuario_id'}"/>
                    <filter string="Producto" name="group_producto" context="{'group_by': 'producto_id'}"/>
                    <filter string="Fecha" name="group_fecha" context="{'group_by': 'fecha'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de Ventana -->
    <record id="action_pi_comentario" model="ir.actions.act_window">
        <field name="name">Comentarios</field>
        <field name="res_model">pi.comentario</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_activos': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay comentarios
            </p>
            <p>
                Los comentarios aparecen en los productos del marketplace.
            </p>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_pi_comentario"
              name="Comentarios"
              action="action_pi_comentario"
              sequence="50"/>
</odoo>
