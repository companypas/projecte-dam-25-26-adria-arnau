<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Formulario -->
    <record id="view_pi_usuario_form" model="ir.ui.view">
        <field name="name">pi.usuario.form</field>
        <field name="model">pi.usuario</field>
        <field name="arch" type="xml">
            <form string="Usuario">
                <header>
                    <button name="action_reportar_usuario" 
                            string="Reportar Usuario" 
                            type="object" 
                            class="btn-warning"
                            icon="fa-flag"/>
                    
                    <button name="action_ver_perfil_publico" 
                            string="Ver Perfil Público" 
                            type="object" 
                            class="btn-primary"
                            icon="fa-user"/>
                </header>
                
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del usuario..."/>
                        </h1>
                        <h3>
                            <field name="id_usuario" readonly="1"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Información Personal">
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="user_id"/>
                        </group>
                        <group string="Información del Marketplace">
                            <field name="fecha_registro" readonly="1"/>
                            <field name="antiguedad" readonly="1"/>
                            <field name="es_usuario_marketplace" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Estadísticas">
                            <field name="valoracion_promedio" widget="percentage"/>
                            <field name="total_valoraciones" readonly="1"/>
                        </group>
                        <group string="Actividad">
                            <field name="total_productos_venta" readonly="1"/>
                            <field name="total_productos_vendidos" readonly="1"/>
                            <field name="total_productos_comprados" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Productos en Venta" name="productos_venta">
                            <field name="productos_venta">
                                <list>
                                    <field name="nombre_producto"/>
                                    <field name="categoria_id"/>
                                    <field name="precio"/>
                                    <field name="estado_venta"/>
                                    <field name="fecha_publicacion"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Productos Vendidos" name="productos_vendidos">
                            <field name="productos_vendidos">
                                <list>
                                    <field name="producto_id"/>
                                    <field name="comprador_id"/>
                                    <field name="fecha"/>
                                    <field name="monto"/>
                                    <field name="estado"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Productos Comprados" name="productos_comprados">
                            <field name="productos_comprados">
                                <list>
                                    <field name="producto_id"/>
                                    <field name="vendedor_id"/>
                                    <field name="fecha"/>
                                    <field name="monto"/>
                                    <field name="estado"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Valoraciones Recibidas" name="valoraciones_recibidas">
                            <field name="valoraciones_recibidas">
                                <list>
                                    <field name="usuario_valorador_id"/>
                                    <field name="valoracion" widget="priority"/>
                                    <field name="comentario"/>
                                    <field name="fecha"/>
                                    <field name="tipo_valoracion"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Valoraciones Realizadas" name="valoraciones_realizadas">
                            <field name="valoraciones_realizadas">
                                <list>
                                    <field name="usuario_valorado_id"/>
                                    <field name="valoracion" widget="priority"/>
                                    <field name="comentario"/>
                                    <field name="fecha"/>
                                    <field name="tipo_valoracion"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Reportes Realizados" name="reportes_realizados">
                            <field name="reportes_realizados">
                                <list>
                                    <field name="tipo_reporte"/>
                                    <field name="referencia"/>
                                    <field name="motivo"/>
                                    <field name="fecha"/>
                                    <field name="estado"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Reportes Recibidos" name="reportes_recibidos">
                            <field name="reportes_recibidos">
                                <list>
                                    <field name="reportado_por_id"/>
                                    <field name="motivo"/>
                                    <field name="fecha"/>
                                    <field name="estado"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de Lista -->
    <record id="view_pi_usuario_list" model="ir.ui.view">
        <field name="name">pi.usuario.list</field>
        <field name="model">pi.usuario</field>
        <field name="arch" type="xml">
            <list string="Usuarios">
                <field name="image_1920" widget="image" options="{'size': [50, 50]}"/>
                <field name="id_usuario"/>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="fecha_registro"/>
                <field name="antiguedad"/>
                <field name="valoracion_promedio" widget="percentage"/>
                <field name="total_valoraciones"/>
                <field name="total_productos_venta"/>
                <field name="total_productos_vendidos"/>
                <field name="total_productos_comprados"/>
            </list>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_pi_usuario_kanban" model="ir.ui.view">
        <field name="name">pi.usuario.kanban</field>
        <field name="model">pi.usuario</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="email"/>
                <field name="image_1920"/>
                <field name="valoracion_promedio"/>
                <field name="total_valoraciones"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('pi.usuario', 'image_1920', record.id.raw_value)" 
                                     alt="Usuario" 
                                     style="max-height: 100px;"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="email"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-star"/> <field name="valoracion_promedio" widget="percentage"/>
                                        (<field name="total_valoraciones"/> valoraciones)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista de Búsqueda -->
    <record id="view_pi_usuario_search" model="ir.ui.view">
        <field name="name">pi.usuario.search</field>
        <field name="model">pi.usuario</field>
        <field name="arch" type="xml">
            <search string="Buscar Usuarios">
                <field name="id_usuario"/>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                
                <filter string="Usuarios Marketplace" name="marketplace" domain="[('es_usuario_marketplace', '=', True)]"/>
                
                <separator/>
                <filter string="Con Productos en Venta" name="con_productos" domain="[('total_productos_venta', '&gt;', 0)]"/>
                <filter string="Con Ventas" name="con_ventas" domain="[('total_productos_vendidos', '&gt;', 0)]"/>
                <filter string="Con Compras" name="con_compras" domain="[('total_productos_comprados', '&gt;', 0)]"/>
                
                <separator/>
                <filter string="Bien Valorados (>80%)" name="bien_valorados" domain="[('valoracion_promedio', '&gt;=', 0.8)]"/>
                <filter string="Con Valoraciones" name="con_valoraciones" domain="[('total_valoraciones', '&gt;', 0)]"/>
                
                <separator/>
                <filter string="Registrados Este Mes" name="este_mes" 
                        domain="[('fecha_registro', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <filter string="Registrados Este Año" name="este_anio" 
                        domain="[('fecha_registro', '&gt;=', context_today().strftime('%Y-01-01'))]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Fecha Registro" name="group_fecha" context="{'group_by': 'fecha_registro'}"/>
                    <filter string="Usuario Odoo" name="group_user" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista Graph -->
    <record id="view_pi_usuario_graph" model="ir.ui.view">
        <field name="name">pi.usuario.graph</field>
        <field name="model">pi.usuario</field>
        <field name="arch" type="xml">
            <graph string="Análisis de Usuarios" type="bar">
                <field name="fecha_registro" type="row" interval="month"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Acción de Ventana -->
    <record id="action_pi_usuario" model="ir.actions.act_window">
        <field name="name">Usuarios</field>
        <field name="res_model">pi.usuario</field>
        <field name="view_mode">kanban,list,form,graph</field>
        <field name="search_view_id" ref="view_pi_usuario_search"/>
        <field name="context">{'search_default_marketplace': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo usuario
            </p>
            <p>
                Los usuarios del marketplace pueden comprar y vender productos.
            </p>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_pi_usuario"
              name="Usuarios"
              action="action_pi_usuario"
              sequence="5"/>
</odoo>
